{
  "name": "blank-payload",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "git config core.hooksPath .git-hooks",
    "clean": "rm -rf .next node_modules",
    "dev": "next dev",
    "devsafe": "rm -rf .next && next dev",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "generate:db-schema": "payload generate:db-schema",
    "gen": "bun generate:importmap && bun generate:types",
    "build": "next build",
    "start": "next start",
    "build:docker": "docker build -t pl --secret id=env,src=.env .",
    "deploy:fly": "fly deploy --build-secret env=\"$(cat .env)\"",
    "lint": "next lint",
    "payload": "payload"
  },
  "dependencies": {
    "@payloadcms/db-vercel-postgres": "^3.17.1",
    "@payloadcms/email-resend": "^3.17.1",
    "@payloadcms/next": "^3.17.1",
    "@payloadcms/richtext-lexical": "^3.17.1",
    "@payloadcms/storage-s3": "^3.17.1",
    "@payloadcms/ui": "^3.17.1",
    "graphql": "^16.10.0",
    "next": "^15.1.5",
    "payload": "^3.17.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/eslint": "^9.6.1",
    "@types/node": "latest",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.5",
    "eslint-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-scoped-preflight": "^3.4.10",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
